                        </xs:complexType>
                    </xs:element>
                    <xs:element name="drop-column">
                        <xs:complexType>
                            <xs:attribute name="column-name"/>
                        </xs:complexType>
                    </xs:element>
                    <xs:element name="merge-columns">
                        <xs:complexType>
                            <xs:attribute name="column-1-name"/>
                            <xs:attribute name="column-2-name"/>
