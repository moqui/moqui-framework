                        <xs:complexType>
                            <xs:attribute name="table-name"/>
                        </xs:complexType>
                    </xs:element>
                    <xs:element name="rename-table">
                        <xs:complexType>
                            <xs:attribute name="old-table-name"/>
                        </xs:complexType>
                    </xs:element>
                    <xs:element name="rename-column">
                        <xs:complexType>
                            <xs:attribute name="old-column-name"/>
