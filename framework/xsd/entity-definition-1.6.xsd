                            <xs:attribute name="field-name"/>
                        </xs:complexType>
                    </xs:element>
                    <xs:element name="drop-index">
                        <xs:complexType>
                            <xs:attribute name="index-name"/>
                        </xs:complexType>
                    </xs:element>
