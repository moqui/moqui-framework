<addons default-repository="github">
    <!-- Where to get runtime directory if not present -->
    <runtime name="moqui-runtime" group="resistmanagement" version="3.0.0" branch="master"/>

    <!-- Mantle Business Artifact and Integration Components -->
    <component name="mantle-udm" group="resistmanagement" version="2.2.0" branch="master"/>
    <component name="mantle-usl" group="resistmanagement" version="2.2.0" branch="master"/>

    <!-- Moqui Applications -->
    <component name="SimpleScreens" group="resistmanagement" version="2.2.0" branch="master"/>
    <component name="HiveMind" group="resistmanagement" version="1.5.0" branch="master"/>
    <component name="PopCommerce" group="resistmanagement" version="2.2.0" branch="master"/>
    <component name="MarbleERP" group="resistmanagement" version="1.0.0" branch="master"/>

    <!-- Moqui Tool Components -->
    <component name="moqui-hazelcast" group="resistmanagement" version="1.1.3" branch="master"/>

    <!-- Component Sets -->
    <component-set name="resistmanagement" components="PopCommerce,HiveMind,MarbleERP"/>

    <!-- Release builds:
        gradle getComponentSet -PcomponentSet=custom -PlocationType=release
        - these make the source distro for each
        - to build the demo war: gradle load test addRuntime
    -->
</addons>
